@model Actor

@{ 
    ViewData["Title"] = "Update actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" />
                    </div>
                    <div class="form-group">
                        <label asp-for="ProfilePicturesURL" class="control-lable"></label>
                        <input asp-for="ProfilePicturesURL" class="form-control" />
                        <span asp-validation-for="ProfilePicturesURL" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-lable"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bios" class="control-lable"></label>
                        <input asp-for="Bios" class="form-control" />
                        <span asp-validation-for="Bios" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.ActorsId" />
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function(){
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePicturesURL").val();
        })

        $("#ProfilePicturesURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}